<?xml version="1.0" encoding="utf-8"?>
<BaseTip xmlns="views.spreadUI.tips.*" xmlns:mx="http://www.adobe.com/2006/mxml" width="245" height="170">
	<mx:Script>
		<![CDATA[
			import roma.logic.GameContext;
			import roma.logic.object.castle.CastleResourceManager;
			import roma.util.MultiLang;

			[Bindable]
			private var resManager:CastleResourceManager;
			
			override public function refresh():void {
				this.resManager = GameContext.instance.getPlayerObj().getCurCastleObj().resourceManager;
			} 
		]]>
	</mx:Script>
	<mx:VBox left="10" top="10" right="10" bottom="10">
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population')}"  styleName="titleBordLabel"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population.current')}"/>
			<mx:Label text="{this.resManager.curPopulation}"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population.free')}"/>
			<mx:Label text="{this.resManager.freePopulation}"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population.working')}"/>
			<mx:Label text="{this.resManager.workingPopulationInFact}"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population.max')}"/>
			<mx:Label text="{this.resManager.maxPopulation}"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{MultiLang.msg('label.population.change')}"/>
			<mx:Label text="{this.resManager.populationChangeDir}"/>
		</mx:HBox>
	</mx:VBox>	
</BaseTip>
